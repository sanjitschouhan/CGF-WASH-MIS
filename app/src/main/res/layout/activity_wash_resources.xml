<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.collectivegood.dbsibycgf.wash_resources.WashResourcesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TEACHER'S MANUEL"
                        android:textAlignment="center" />


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="1">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Level 1"
                            android:textSize="20dp" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Level 2"
                            android:textSize="20dp" />


                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Level 3"
                            android:textSize="20dp" />

                    </GridLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STUDENT'S WORKBOOK"
                        android:textAlignment="center" />


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="1"
                        android:rowCount="1">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 1"
                            android:textSize="20sp" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 2"
                            android:textSize="20sp" />


                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 3"
                            android:textSize="20sp" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 4"
                            android:textSize="20sp" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 5"
                            android:textSize="20sp" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_gravity="center"
                            android:text="Class 6"
                            android:textSize="20sp" />

                    </GridLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
